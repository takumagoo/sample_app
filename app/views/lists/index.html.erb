<div class="list-wrap">
<% @lists.each do |list| %>
  <div class="list-box">
    <% if list.image.attached? %>
      <%= image_tag list.image, size: "200x200" %>
    <% else %>
      <%= image_tag 'no_image', size: "200x200" %>
    <% end %>
  </div>
  <div class="list-comment">
    <span class="list-body"><%= list.body %></span>   <!--Listモデルのbodyカラムに入っているデータを呼び出す-->
    <span class="list-body"><%= list_to list.title, list_path(list.id) %></span>
  </div>
<% end %>
</div>

